@model CNPM1.Models.SanPham

@{
    ViewBag.Title = "XoaSP";
    Layout = "~/Views/Shared/_LayoutNV.cshtml";
}

<h2>Xóa sản phẩm</h2>

<h3>BẠN CÓ CHẮC RẰNG MUỐN BẠN MUỐN XÓA SẢN PHẨM NÀY?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Tên Sản Phẩm")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tenSP)
        </dd>

        <dt>
            @Html.DisplayName("Số lượng")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SLSP)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" /> |
            @Html.ActionLink("Huỷ", "XemSP","SanPham",new {@class="btn btn-success"})
        </div>
    }
</div>
