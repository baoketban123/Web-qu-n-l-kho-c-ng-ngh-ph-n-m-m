@model CNPM1.Models.Sale

@{
    ViewBag.Title = "Xóa đơn xuất";
    Layout = "~/Views/Shared/_LayoutNV.cshtml";
}

<h2 class="text-danger" style="font-weight:bold;">Xác nhận xóa đơn xuất</h2>

<div class="panel panel-danger" style="max-width:600px;">
    <div class="panel-heading">
        <h3 class="panel-title">Thông tin đơn xuất sẽ bị xóa</h3>
    </div>
    <div class="panel-body">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-md-4" style="font-weight:bold;">Tên sản phẩm</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" value="@Model.tenSPSale" readonly />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-4" style="font-weight:bold;">Số lượng xuất</label>
                <div class="col-md-8">
                    <input type="number" class="form-control" value="@Model.SLSale" readonly />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-4" style="font-weight:bold;">Ngày xuất</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" value="@(Model.DateSale.ToString("dd/MM/yyyy"))" readonly />
                </div>
            </div>
        </form>
        <div class="alert alert-danger" style="margin-top:15px;">
            <strong>Bạn có chắc chắn muốn xóa đơn xuất này không?</strong>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <input type="submit" value="Xóa" class="btn btn-danger" />
                @Html.ActionLink("Hủy", "XemSP", null, new { @class = "btn btn-default", style = "margin-left:10px;" })
            </div>
        }
    </div>
</div>