@model CNPM1.Models.Sale

@{
    ViewBag.Title = "Chi tiết đơn xuất";
    Layout = "~/Views/Shared/_LayoutNV.cshtml";
}

<h2>Thông tin phiếu xuất kho</h2>

<div class="panel panel-primary" style="max-width:600px;">
    <div class="panel-heading">
        <h3 class="panel-title">Thông tin xuất hàng</h3>
    </div>
    <div class="panel-body">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-md-4" style="font-weight:bold;">Tên sản phẩm</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" value="@Model.tenSPSale" readonly />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-4" style="font-weight:bold;">Số lượng xuất</label>
                <div class="col-md-8">
                    <input type="number" class="form-control" value="@Model.SLSale" readonly />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-4" style="font-weight:bold;">Ngày xuất</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" value="@(Model.DateSale.ToString("dd/MM/yyyy"))" readonly />
                </div>
            </div>
        </form>
    </div>
</div>
<p/>
<div>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.id }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Quay lại danh sách", "XemSP", null, new { @class = "btn btn-outline-success" })
</div>